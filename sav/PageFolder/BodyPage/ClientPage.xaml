<Page 
    x:Class="sav.PageFolder.BodyPage.ClientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="570">
    <Grid>
        <ListView
            x:Name="MainList"
            Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Id_client}"
                        Header="НОМЕР СОТРУДНИКА"
                        Width="auto"/>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding FIO_client}"
                        Header="ФИО КЛИЕНТА"
                        Width="Auto"/>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Telefon_number}"
                        Header="ТЕЛЕФОН КЛИЕНТА"
                        Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
